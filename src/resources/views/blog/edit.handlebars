<div class="create-container">
    <div class="create-menu"></div>
    <h1 class="create-quote">What do you think today, huh ?</h1>
    <form class="create-form" method="POST" action="/blogs/edit/{{this.data._id}}">
        <div class="create-title">

            <input type="text" name="title" class="input-title" value="{{this.data.title}}" placeholder="Title...">
        </div>
        <div class="create-subtitle">

            <input type="text" name="subtitle" class="input-subtitle" value="{{this.data.subtitle}}"
                placeholder="Subtitle ...">
        </div>
        <div class="create-content">

            <textarea class="input-content" name="content" onkeyup="textAreaAdjust(this)"
                placeholder="Content...">{{this.data.content}}</textarea>
        </div>
        <div class="create-thumbnail">

            <input type="url" class="input-url" name="imageUrl" value="{{this.data.imageUrl}}" placeholder="Url">
        </div>
        <div class="create-submit">
            <button type="submit">That's okay. Let update!</button>
        </div>
        <script>
            function textAreaAdjust(element) {
                element.style.height = "1px";
                element.style.height = (25 + element.scrollHeight) + "px";
            }

        </script>
    </form>
</div>